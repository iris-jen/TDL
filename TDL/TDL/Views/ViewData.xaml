<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SelfMonitoringApp.Views.ViewDataPage"
             Title="View Data Main" >
    <ContentPage.Content>
        <Grid BackgroundColor="DimGray">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="ButtonGoToMood" 
                    Text="View Mood Data" 
                    Grid.Row="0"
                    BackgroundColor="DarkOrange"
                    Margin="8"
                    Grid.Column="0" Clicked="ButtonGoToMood_OnClicked"/>
            <Button x:Name="ButtonGoToSubstance" 
                    Text="View Substance Data" 
                    Grid.Row="1"
                    BackgroundColor="DarkOrange"
                    Margin="8"
                    />
            <Button x:Name="ButtonGoToSleepData" 
                    Text="View Sleep" 
                    Grid.Row="2"
                    BackgroundColor="DarkOrange"
                    Margin="8"
            />

        </Grid>
    </ContentPage.Content>
</ContentPage>